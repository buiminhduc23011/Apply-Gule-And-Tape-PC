                                    FontFamily="Source Sans Pro"
                                    Width="220"
                                    Height="80"
                                    Margin="20,0,0,0"></Button>

                            <TextBox x:Name="Vel_X_RB"
                                     Style="{StaticResource BlackCaretTextBoxStyle}"
                                     VerticalContentAlignment="Center"
                                     HorizontalContentAlignment="Center"
                                     FontSize="20"
                                     FontWeight="Bold"
                                     FontFamily="Source Sans Pro"
